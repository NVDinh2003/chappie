<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/api*</pattern>
		<pattern>*views/404.jsp</pattern>
	</excludes>

	<!-- apply Sitemesh default template -->
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>

	<decorator name="web" page="web.jsp">
		<pattern>/*</pattern>
	</decorator>


	<decorator name="login" page="login_register.jsp">
		<pattern>/dang-nhap</pattern>
		<pattern>/contact</pattern>
		<pattern>/cart</pattern>
	</decorator>
	
	<decorator name="products" page="products.jsp">
		<pattern>/products</pattern>
		<pattern>/chi-tiet</pattern>
	</decorator>
	
</decorators>